modules = ["nodejs-20", "web", "python-3.11", "python3", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["awsebcli", "c-ares", "cacert", "cargo", "gcc", "glibcLocales", "grpc", "libffi", "libiconv", "libxcrypt", "openssl", "pkg-config", "postgresql", "rustc", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && yarn start"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Backend"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export LD_LIBRARY_PATH=/nix/store/bmi5znnqk4kg2grkrhk6py0irc8phf6l-gcc-14.2.1.20250322-lib/lib:$LD_LIBRARY_PATH && cd backend && python -m uvicorn server:app --host 0.0.0.0 --port 8080"
waitForPort = 8080

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3002

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 40777
externalPort = 5000

[[ports]]
localPort = 44503
externalPort = 3003

[[ports]]
localPort = 45603
externalPort = 3000

[[ports]]
localPort = 46073
externalPort = 3001

[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "cd backend && python -m uvicorn server:app --host 0.0.0.0 --port 5000"]
build = ["bash", "-c", "pip install -r backend/requirements.txt && cd frontend && yarn install && yarn build"]
